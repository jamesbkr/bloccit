<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = User.avatar_url(@user, 128) %>
       <% unless avatar_url.nil? %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <div class='js-comments-count'><%= pluralize(@user.comments.count, 'comment') %></div>
         </small>
       </div>
     </div>
   </div>
 </div>
 <div class="row">
 <div class="col-md-4">

 <% if @user.posts.count > 0  %><h2>Posts</h2> <% end %>
 <div class="row"><%= countPosts %></div>

 <% if @user.comments.count > 0  %><h2>Comments</h2><% end %>
<div class="row"><%= countComments %></div>
 
 
</div>
<div class="col-md-8">
 <% if @user.favorites.count > 0  %><h2>Favorited Posts</h2><% end %>
   <%  @postsFavorited.each do |f| %>
   
 
   <%= render f %>
 
   <div class="col-md-2">
    <%= image_tag User.avatar_url(f.user, 48), class: "gravatar" %>
    </div>
    <div class="col-md-2">
    Number of votes  <%= f.votes.count %>
    </div>
    <div class="col-md-2">
    Number of comments  <%= f.comments.count %>
    </div>
    
    <% end %>
</div>
</div>